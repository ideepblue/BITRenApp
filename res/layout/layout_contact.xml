<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_SchoolList_Root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout_Contact_Title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/textView_Contact_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Contact_Title"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView_Contact_Back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/imageview_button_bg_selector"
            android:scaleType="center"
            android:src="@drawable/imageview_button_back_selector" />

        <ImageView
            android:id="@+id/imageView_Contact_Menu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/imageview_button_bg_selector"
            android:scaleType="center"
            android:src="@drawable/imageview_button_menu_selector" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_Contact_Dir"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@id/relativeLayout_Contact_Title"
        android:singleLine="true"
        android:text="@string/Contact_BIT"
        android:background="#ffffff"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16dp" />

    <ListView
        android:id="@+id/listView_Contact"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/textView_Contact_Dir"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:orientation="vertical"
        android:scrollbars="vertical" />

</RelativeLayout>